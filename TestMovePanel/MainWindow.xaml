            <helix:SphereVisual3D x:Name="ball" Center="100, 100, 100" Radius="30" Transform="{Binding TraslateTrasform}"/>
        </helix:HelixViewport3D>-->

        <helix:HelixViewport3D x:Name="view1" 
                               Grid.Column="2" 
                               Background="{helix:LinearGradientBrush Gray, White}"
                               ShowFrameRate="True"
                               ShowCoordinateSystem="True" 
                               ShowCameraInfo="False"
                               ZoomExtentsWhenLoaded="True">
            <helix:DefaultLights />
            <helix:SphereVisual3D x:Name="ball" Center="100, 100, 100" Radius="30" Transform="{Binding TraslateTrasform}">
                <helix:BoxVisual3D x:Name="box1" Center="-0,0,0" Width="600" Height="30" Length="800" Fill="Orange" Transform="{Binding TraslateTrasform2}"/>
            </helix:SphereVisual3D>
        </helix:HelixViewport3D>

