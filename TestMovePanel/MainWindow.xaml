                               ZoomExtentsWhenLoaded="True">
            <helix:DefaultLights />
            <helix:BoxVisual3D x:Name="box1" Center="-0,0,0" Width="600" Height="30" Length="800" Fill="Orange" Transform="{Binding TraslateTrasform}"/>
